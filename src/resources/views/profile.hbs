<div class='bg-gray-100'>

    <!-- Main Section -->
    <main class='container mx-auto py-10'>
        <div class='grid grid-cols-12 gap-6'>
            <!-- Left Sidebar -->
            <div class='col-span-3'>
                <div class='bg-white rounded-lg p-5 shadow mb-5'>
